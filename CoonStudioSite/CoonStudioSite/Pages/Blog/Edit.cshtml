@page
@model CoonStudioSite.Pages.Blog.EditModel

@{
    ViewData["Title"] = "Edit blog entry";
}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>BlogEntry</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="BlogEntry.ID" />
                <div class="form-group">
                    <label asp-for="BlogEntry.Title" class="control-label"></label>
                    <input asp-for="BlogEntry.Title" class="form-control" />
                    <span asp-validation-for="BlogEntry.Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BlogEntry.Date" class="control-label"></label>
                    <input asp-for="BlogEntry.Date" class="form-control" />
                    <span asp-validation-for="BlogEntry.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BlogEntry.Content" class="control-label"></label>
                    <input asp-for="BlogEntry.Content" class="form-control" />
                    <span asp-validation-for="BlogEntry.Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

</body>
</html>
